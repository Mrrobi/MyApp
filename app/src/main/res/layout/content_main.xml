<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/colorBg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_whatsapp"
                android:onClick="WA"
                android:tooltipText="WhatsApp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_facebook"
                android:onClick="go"
                android:tooltipText="Facebook" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_insta"
                android:onClick="insta"
                android:tooltipText="Instagram" />

            <Button
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_chrome"
                android:onClick="chrome"
                android:tooltipText="Chrome Browser" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="2dp"
                android:background="@drawable/btn_messenger"
                android:onClick="messenger"
                android:layout_weight="1"
                android:tooltipText="Messenger" />
            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="2dp"
                android:background="@drawable/btn_youtube"
                android:onClick="youtube"
                android:layout_weight="1"
                android:tooltipText="youtube" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Must Have To Install all the apps execpt facebook.Also Some Features are Exclusive to Xiaomi only:p"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>